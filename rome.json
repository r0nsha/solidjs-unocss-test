{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": { "enabled": false },
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 110,
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"trailingComma": "all",
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	},
	"linter": { "enabled": true, "rules": { "recommended": true } }
}
