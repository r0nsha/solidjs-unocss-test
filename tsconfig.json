{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noEmit": true,
		"isolatedModules": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"types": ["vite/client"],
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
